{
  "name": "scalemate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "node scripts/simple-start.js",
    "migrate:if-needed": "node scripts/migrate-if-needed.js",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "cypress open",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:deploy": "drizzle-kit push && npm run db:seed",
    "deploy:railway": "railway up --detach",
    "db:backup": "node scripts/backup.js",
    "db:seed": "node scripts/seed.js",
    "build:clean": "rm -rf .next && rm -rf node_modules/.cache && npm run build",
    "setup:production": "node scripts/setup-production.js"
  },
