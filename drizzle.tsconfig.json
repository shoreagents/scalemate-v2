{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./src/lib/*"]
    }
  },
  "include": [
    "src/lib/db/schema.ts",
    "src/lib/db/index.ts"
  ],
  "exclude": [
    "node_modules",
    "src/lib/ai/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
} 